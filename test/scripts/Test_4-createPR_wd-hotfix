#!/bin/bash
set -e

event="workflow_dispatch"
workdir="release"
data="workflow_dispatch-hotfix.json"
workflow="release_wd"

# --------------------------

setup() {
  echo "setup"
  cd /target/$1
  git checkout -b hotfix/v0.0.1
  git push --set-upstream local hotfix/v0.0.1
}

teardown() {
  :
}

# --------------------------

id=$(basename "$0")
id=${id#Test_}

/docker/prepare $workdir $id $workflow
setup $id
/docker/act $event $id $data $workflow
teardown $id
